<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="fragmentChangePasswordBean"
    type="com.example.carescheduling.Ui.Profile.bean.FragmentChangePasswordBean"/>
        <variable
            name="editEmailClick"
            type="com.example.carescheduling.Ui.Profile.presenter.EditEmailClick" />

        <variable
            name="changePasswordClick"
            type="com.example.carescheduling.Ui.Profile.presenter.FragmentChangePasswordClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Ui.Profile.View.FragmentChangePassword">

        <RelativeLayout
            android:id="@+id/rl_tool"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/user_profile"
                android:onClick="@{(v)->editEmailClick.BackButtonClick()}"
                android:paddingStart="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_left_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/forteen_sp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/ten_dp"
                android:contentDescription="@string/user_profile"
                android:onClick="@{(v)->editEmailClick.DoneClick()}"
                android:tint="@color/white"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_tick" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifty_dp"
            android:padding="@dimen/ten_dp"
            android:text="@string/user_name" />

        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:text="@{fragmentChangePasswordBean.getUserName()}"
            android:background="@android:color/white"
            android:paddingStart="@dimen/ten_dp"
            android:paddingTop="@dimen/ten_dp"
            android:paddingEnd="@dimen/ten_dp"
            android:paddingBottom="@dimen/ten_dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/fifty_dp"
            android:gravity="start"
            android:onClick="@{(v)->changePasswordClick.ChangePasswordClick()}"
            android:text="@string/change_my_password_underline"
            android:textAlignment="textStart"
            android:textColor="@color/blue" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifty_dp"
            android:padding="@dimen/ten_dp"
            android:text="@string/password_question" />

        <EditText
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:background="@android:color/white"
            android:paddingStart="@dimen/ten_dp"
            android:text="@{fragmentChangePasswordBean.getPasswordQuestion()}"
            android:paddingTop="@dimen/ten_dp"
            android:paddingEnd="@dimen/ten_dp"
            android:paddingBottom="@dimen/ten_dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:padding="@dimen/ten_dp"
            android:text="@string/password_question_answer" />

        <EditText
            android:id="@+id/edt_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:background="@android:color/white"
            android:paddingStart="@dimen/ten_dp"
            android:paddingTop="@dimen/ten_dp"
            android:text="@{fragmentChangePasswordBean.getPasswordAns()}"
            android:paddingEnd="@dimen/ten_dp"
            android:paddingBottom="@dimen/ten_dp" />


    </LinearLayout>
</layout>