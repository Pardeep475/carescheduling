<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="editEmailClick"
            type="com.example.carescheduling.Ui.Profile.presenter.EditEmailClick" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_tool"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            tools:context=".Ui.Profile.View.EditProfileImage"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/user_profile"
                android:onClick="@{(v)->editEmailClick.BackButtonClick()}"
                android:paddingStart="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_left_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/profile_list"
                android:textColor="@color/white"
                android:textSize="@dimen/forteen_sp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/ten_dp"
                android:contentDescription="@string/user_profile"
                android:onClick="@{(v)->editEmailClick.DoneClick()}"
                android:tint="@color/white"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_tick" />

        </RelativeLayout>


        <ImageView
            android:layout_width="@dimen/one_fifty_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifty_dp"
            app:srcCompat="@drawable/user_placeholder"
            android:layout_height="@dimen/one_fifty_dp"
            android:contentDescription="@string/user_image" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/fifty_dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/radius_dark_blue_bg"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:text="@string/new_picture_using_camera"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/radius_dark_blue_bg"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/select_from_my_photos"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>