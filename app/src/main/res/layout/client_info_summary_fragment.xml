<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="commonData"
            type="com.example.carescheduling.Ui.Common.CommonBean" />

        <variable
            name="commonClick"
            type="com.example.carescheduling.Ui.Common.Common" />

        <variable
            name="description"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/rl_tool"
            layout="@layout/toolbar_layout"
            bind:commonClick="@{commonClick}"
            bind:commonData="@{commonData}" />

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/sl_demo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <include layout="@layout/item_shimmer_layout" />

        </io.supercharge.shimmerlayout.ShimmerLayout>

        <ScrollView
            android:id="@+id/sv_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="@string/first_name"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="@dimen/twenty_five_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:text="full \naddress \nthree lines"
                    android:fontFamily="@font/rubik_light"
                    android:textColor="@color/black"
                    android:textSize="@dimen/forteen_sp" />


                <ImageView
                    android:layout_width="@dimen/hundrd_dp"
                    android:layout_height="@dimen/hundrd_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:contentDescription="@string/user_profile"
                    app:srcCompat="@drawable/user_placeholder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:fontFamily="@font/rubik_light"
                    android:text="@{description}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/forteen_sp" />


            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/rl_no_data_found"
            layout="@layout/no_data_found"
            android:visibility="gone" />

    </LinearLayout>
</layout>