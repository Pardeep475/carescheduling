<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="hoursAndExpensesCLick"
        type="com.example.carescheduling.Ui.HomeScreen.presenter.HoursAndExpensesCLick" />
</data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.HomeScreen.View.HoursAndExspenses">

    <RelativeLayout
        android:id="@+id/rl_tool"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/user_profile"
            android:paddingStart="@dimen/ten_dp"
            android:onClick="@{(v)->hoursAndExpensesCLick.onBackPress()}"
            android:paddingEnd="@dimen/ten_dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_left_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/hours_and_expenses"
            android:textColor="@color/white"
            android:textSize="@dimen/forteen_sp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ten_dp"
            android:contentDescription="@string/user_profile"
            android:tint="@color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_tick" />

    </RelativeLayout>


    <com.cooltechworks.views.shimmer.ShimmerRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rcv_direction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_tool"
        app:shimmer_demo_child_count="10"
        app:shimmer_demo_grid_child_count="2"
        app:shimmer_demo_layout_manager_type="linear_vertical"
        app:shimmer_demo_angle="20" />

</RelativeLayout>
</layout>