<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="moreInfoClick"
            type="com.example.carescheduling.Ui.HomeScreen.presenter.MoreInfoClick" />

        <variable
            name="clientDisabilityBean"
            type="com.example.carescheduling.Ui.HomeScreen.beans.ClientDisabilityBean.Datum" />
        <variable
            name="pos"
            type="int"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/twenty_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@{clientDisabilityBean.disabilityTypeName}"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registerred"
                android:fontFamily="@font/rubik_light"
                android:textColor="@color/grey"
                android:textSize="@dimen/sixteen_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/five_dp"
                android:fontFamily="@font/rubik_light"
                android:text="21/10/19"
                android:textColor="@color/grey"
                android:textSize="@dimen/forteen_sp" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v)->moreInfoClick.moreInfoClick(pos)}"
            android:text="@string/more_info"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/blue"
            android:textSize="@dimen/sixteen_sp" />
    </LinearLayout>
</layout>
