<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileResultBean"
            type="com.example.carescheduling.Ui.Dashboard.beans.ProfileBean" />

        <variable
            name="commonData"
            type="com.example.carescheduling.Ui.Common.CommonBean" />

        <variable
            name="commonClick"
            type="com.example.carescheduling.Ui.Common.Common" />

        <variable
            name="profileImageList"
            type="com.example.carescheduling.Ui.Profile.presenter.ProfileImageListClick" />

        <variable
            name="imageUrl"
            type="android.graphics.Bitmap" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Ui.Profile.View.ProfileImageList">

        <include
            android:id="@+id/rl_tool"
            layout="@layout/toolbar_layout"
            bind:commonClick="@{commonClick}"
            bind:commonData="@{commonData}" />


        <ImageView
            android:layout_width="@dimen/one_fifty_dp"
            android:layout_height="@dimen/one_fifty_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifty_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:contentDescription="@string/user_image"
            android:onClick="@{(v)->profileImageList.ProfileClick()}"
            app:setImage="@{imageUrl}"
            app:srcCompat="@drawable/user_placeholder" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/twenty_dp" />
    </LinearLayout>
</layout>