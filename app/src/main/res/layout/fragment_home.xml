<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickhandler"
            type="com.example.carescheduling.Ui.Dashboard.presenter.ProfileClickHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Dashboard.view.HomeF">
        <RelativeLayout
            android:id="@+id/rl_tool"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/title_home"
                android:textColor="@color/white"
                android:textSize="@dimen/forteen_sp" />

            <ImageView
                android:onClick="@{(v)->clickhandler.logout()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logout"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_marginEnd="@dimen/ten_dp"
                android:contentDescription="@string/user_profile" />

        </RelativeLayout>
        <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rcv_home"
        android:layout_below="@+id/rl_tool"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_height="match_parent"/>

    </RelativeLayout>
</layout>