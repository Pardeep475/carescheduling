<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="commonData"
            type="css.mobile.carescheduling.Ui.Common.CommonBean" />

        <variable
            name="commonClick"
            type="css.mobile.carescheduling.Ui.Common.Common" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/rl_tool"
            layout="@layout/toolbar_layout"
            bind:commonClick="@{commonClick}"
            bind:commonData="@{commonData}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/sixteen_dp"
            android:paddingEnd="@dimen/sixteen_dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/fifty_dp"
                android:gravity="start"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/current_password"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/edt_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:fontFamily="@font/rubik_light"
                android:background="@android:color/white"
                android:inputType="textPassword"
                android:paddingStart="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp"
                android:paddingBottom="@dimen/ten_dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="start"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/new_password"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_light"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:background="@android:color/white"
                android:inputType="textPassword"
                android:paddingStart="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp"
                android:paddingBottom="@dimen/ten_dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/twenty_dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="start"
                android:text="@string/repeat_new_password"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/edt_repeat_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:background="@android:color/white"
                android:inputType="textPassword"
                android:paddingStart="@dimen/ten_dp"
                android:fontFamily="@font/rubik_light"
                android:paddingTop="@dimen/ten_dp"
                android:paddingEnd="@dimen/ten_dp"
                android:paddingBottom="@dimen/ten_dp" />

        </LinearLayout>

    </LinearLayout>
</layout>
